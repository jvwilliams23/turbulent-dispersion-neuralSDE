FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      particleProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solution
{
    active          true;
    coupled         true;
    transient       yes;
    cellValueSourceCorrection off;

    interpolationSchemes
    {
        rho.air         cell;
        U.air           cell;
        mu.air          cell; 
        UpTilde     cell;
    }

    averagingMethod basic;

    integrationSchemes
    {
        U               analytical;
    }

    sourceTerms
    {
        schemes
        {
            U semiImplicit 1;
        }
    }
}

constantProperties
{
    rho0            1000;

    alphaMax        0.9;
}

subModels
{
    particleForces
    {
        WenYuDrag
        {
            alphac alpha.air;
        }
    }

    injectionModels
    {
        model1
        {
            type            manualInjection;
            massTotal       0;
            parcelBasisType fixed;
            nParticle       1;
            SOI             0.;
            /* 
            injectionTable.dat is a file containing the positions of some particles.
            Really it should contain many randomly positioned particles, but the file
            would be large and github would complain. So this is a small example on
            how it should be formatted
            */
            positionsFile   "injectionTable.dat"; 
            U0              (0 0 0);
            sizeDistribution
            {
                type        fixedValue;
                fixedValueDistribution
                {
                    value  50.9e-6;  
                }
            }
        }
    }
    dispersionModel "dispersionAverageFieldsOnly";
    DispersionAverageFieldsOnlyCoeffs
    {
        U       U.air;
        init    "Uc"; // initial condition is fluid = particles
    }

    patchInteractionModel rebound;
    reboundCoeffs
    {  
        UFactor         1.0;
    }

    heatTransferModel none;

    surfaceFilmModel none;

    packingModel none;

    dampingModel none; 

    isotropyModel none; 
    
    stochasticCollisionModel none;

    radiation off;
}

cloudFunctions
{}


