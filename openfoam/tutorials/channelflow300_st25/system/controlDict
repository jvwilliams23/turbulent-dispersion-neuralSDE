FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     MPPICFoam;

startFrom       latestTime;

startTime       0.0;

stopAt          endTime;

endTime         2.0;

deltaT          4.2e-5;

writeControl    runTime;

writeInterval   0.1;

purgeWrite      0;

writeFormat     binary;

writePrecision  8;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

libs ( 	
    "liblagrangianTurbulenceHW.so"
    "libDispersionAverageFieldsOnly.so"
);

functions
{

   fieldAverage1
    {
        type            fieldAverage;
        libs            ("libfieldFunctionObjects.so");
        writeControl    writeTime;

        fields
        (
            U.air
            {
                mean        on;
                prime2Mean  on;
                base        time;
            }
	    alpha.air
            {
                mean        on;
                prime2Mean  off;
                base        time;
            }
            p
            {
                mean        on;
                prime2Mean  on;
                base        time;
            }
	    UpTilde
            {
                mean        on;
                prime2Mean  on;
                base        time;
            }
        );
	
        log             true;
        timeStart       0.45;
    }
}

